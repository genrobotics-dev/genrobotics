# Apache .htaccess for Next.js static export with www redirect
# Place this file in your web root directory (where index.html is located)

RewriteEngine On

# Redirect www.genrobotics.com to genrobotics.com
RewriteCond %{HTTP_HOST} ^www\.genrobotics\.com$ [NC]
RewriteRule ^(.*)$ https://genrobotics.com/$1 [R=301,L]

# Force HTTPS (optional but recommended)
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://genrobotics.com/$1 [R=301,L]

# Next.js static export - handle client-side routing
# Redirect all requests to index.html for client-side routing
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ /index.html [L]

# Handle trailing slashes for Next.js static export
RewriteCond %{REQUEST_URI} !^/$
RewriteCond %{REQUEST_URI} !/$
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ /$1/ [R=301,L]

# Security headers
<IfModule mod_headers.c>
    Header always set X-Robots-Tag "index, follow"
    Header always set X-Content-Type-Options nosniff
    Header always set X-Frame-Options DENY
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# Cache control for static assets
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
</IfModule>
